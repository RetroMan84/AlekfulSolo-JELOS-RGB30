<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>

<!-- Clock, Battery and WIFI - Screen View //-->

	<view name="screen">

		<text name="clock">
     			<color>ffffff</color>
      			<fontSize>0.040</fontSize>
      			<pos>0.858 0.95</pos>
      			<size>0.14 0.068</size>
      			<alignment>right</alignment>
      			<verticalAlignment>right</verticalAlignment>
      			<fontPath>./_inc/fonts/Oxygen-Regular.ttf</fontPath>
    		</text>

		<batteryIndicator name="batteryIndicator">
			<color>ffffff</color>
         		<pos>0.016666666666667 0.01</pos>
         		<size>0.966666666666667 0.0625</size>
         		<full>./_inc/images/utility/icons/tinyscreen/battery-100-vertical.svg</full>
         		<at75>./_inc/images/utility/icons/tinyscreen/battery-75-vertical.svg</at75>
         		<at50>./_inc/images/utility/icons/tinyscreen/battery-50-vertical.svg</at50>
         		<at25>./_inc/images/utility/icons/tinyscreen/battery-25-vertical.svg</at25>
         		<empty>./_inc/images/utility/icons/tinyscreen/battery-0-vertical.svg</empty>
         		<incharge>./_inc/images/utility/icons/tinyscreen/battery-charging-vertical.svg</incharge>
         		<networkIcon>./_inc/images/utility/icons/tinyscreen/wifi-vertical.svg</networkIcon>
      		</batteryIndicator>
      
		<controllerActivity name="controllerActivity">
         		<visible>false</visible>
      		</controllerActivity>
  	</view>


<!-- Clock, Battery and WIFI - Screen View END //-->


<!-- Carousel - System View //-->

   	<view name="system">

      		<carousel name="systemcarousel">
        		<type>horizontal</type>
   			<pos>-2.70 -0.18</pos>
        		<logoAlignment>bottom</logoAlignment>         
        		<size>7.0 1.0</size>
        		<logoScale>2.9</logoScale>          
        		<logoSize>0.1 0.1</logoSize>
			<zIndex>2</zIndex>
        		<color>00000000</color>
        		<maxLogoCount>3</maxLogoCount>       
     		</carousel>
      
		<image name="background" extra="true">
         		<origin>0 0</origin>
         		<pos>0 0</pos>
         		<size>1 1</size>
        		<zIndex>1</zIndex>                 
         		<path>./_inc/images/background.jpg</path>
      		</image>
                     
      		<text name="systemInfo">     
         		<pos>0.75 0.75</pos>
         		<backgroundColor>00000000</backgroundColor>
         		<color>ffffff</color>
         		<fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
	     		<fontSize>0.04</fontSize>
         		<zIndex>5</zIndex>	     
     		 </text>            
   
	</view>


<!-- Carousel - System View END //-->


<!-- Help System - All Views //-->

   	<view name="system">

      		<helpsystem name="help">
         		<fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         		<fontSize>0.03</fontSize>     
         		<pos>0.1 0.948</pos>      
         		<textColor>ffffff</textColor>
         		<iconColor>ffffff</iconColor>
      		</helpsystem>

   	</view>  

   	<view name="detailed,video,basic">

      		<helpsystem name="help">
         		<fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         		<fontSize>0.03</fontSize>     
         		<pos>0.009 0.955</pos>      
         		<textColor>ffffff</textColor>
         		<iconColor>ffffff</iconColor>
      		</helpsystem>

   	</view>  


<!-- Help System - All Views END//-->


<!-- Gamelist - All Views //-->

   	<view name="basic,detailed,video">
      
		<textlist name="gamelist">      
         		<selectorColor>7a4545</selectorColor>
         		<selectedColor>ffffff</selectedColor>
         		<primaryColor>ffffff</primaryColor>
         		<secondaryColor>8bfeff</secondaryColor>
         		<fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         		<fontSize>0.04</fontSize>
         		<forceUppercase>0</forceUppercase>
         		<scrollSound>./_inc/sounds/Move.wav</scrollSound>
         		<zIndex>3</zIndex>                          
      		</textlist>

   	</view>

   	<view name="basic">

      		<textlist name="gamelist">                          
         		<pos>0.015 0.1725</pos>
         		<size>.97 0.8166</size>
         		<alignment>center</alignment>                       
      		</textlist>

   	</view>
   
   	<view name="detailed,video">
      		
		<textlist name="gamelist">                          
         		<pos>0.0235 0.05</pos>
         		<size>0.46 0.933</size>
         		<alignment>left</alignment>                       
     		</textlist>
   	</view>


<!-- Gamelist - All Views END//-->



<!-- Background - All Views//-->
   
   	<view name="basic">

      		<image name="background" extra="true">
         		<origin>0 0</origin>
         		<pos>0 0</pos>
         		<size>1 1</size>        
         		<path>./_inc/images/background_basic.jpg</path>
         		<zIndex>1</zIndex>          
      		</image>                
   	</view> 
    
   	<view name="detailed,video">

      		<image name="background" extra="true">
         		<origin>0 0</origin>
        		<pos>0 0</pos>
         		<size>1 1</size>        
         		<path>./_inc/images/background_video.jpg</path>
         		<zIndex>1</zIndex>         
      		</image>
               
   	</view>     


<!-- Background - All Views END//-->
   

<!-- Media and Videos - Detailed and Video Views//-->

   	<view name="detailed">

      		<image name="md_image">
         		<origin>0.5 0.5</origin>
         		<pos>0.75 0.60</pos>
         		<maxSize>0.45 0.45</maxSize>
         		<zIndex>2</zIndex>         
      		</image>      
   	</view>

   	<view name="video">   

      		<video name="md_video">
         		<origin>0.5 0.5</origin>
         		<pos>0.748 0.6</pos>
         		<maxSize>0.45 0.45</maxSize>
         		<delay>3</delay>
         		<zIndex>2</zIndex>         
         		<showSnapshotNoVideo>true</showSnapshotNoVideo>
         		<showSnapshotDelay>true</showSnapshotDelay>
      		</video>             
   	</view>

<!-- Media and Videos - Detailed and Video Views END//-->

